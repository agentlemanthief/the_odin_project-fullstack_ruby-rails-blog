<% if flash[:notice] == 'Your comment could not be saved!' %>
  <div class="div__commentmessage-failure">
    <p class="comment-message"><%= flash[:notice] %></p>
  </div>
<% elsif flash[:notice] == 'Thank you for your comment!' %>
  <div class="div__commentmessage-success">
    <p class="comment-message"><%= flash[:notice] %></p>
  </div>
<% end %>

<h1><%= @article.title %></h1>

<br>
<hr>
<br>

<div class="article">
  <p><%= @article.body %></p>
</div>

<br>
<hr>

<div class="links">
<ul>
  <li><%= link_to "All Articles", root_path %></li>
  <li> | </li>
  <li><%= link_to "Edit" , edit_article_path(@article) %></li>
  <li> | </li>
  <li><%= link_to "Delete", article_path(@article), method: :delete, data: { confirm: "Are you sure?" } %></li>
</ul>
</div>

<hr class="nav__underline">

<h2><%= "Comments" if @article.comments.exists? %></h2>

<p><%= "There are #{@article.comments.count} comments on this article"%></p>
<%= render @article.comments %>

<hr>
<br><br>

<h2>Add a comment:</h2>

<hr>

<%= render 'comments/form' %>

